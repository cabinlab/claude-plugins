<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="2">
    <title>FusionMCPBridge</title>
    <organization>com.cabinlab</organization>
    <domains enable_localSystem="false" enable_currentUserHome="true"/>

    <options customize="never" require-scripts="false" hostArchitectures="x86_64,arm64"/>

    <welcome file="welcome.html" mime-type="text/html"/>
    <conclusion file="conclusion.html" mime-type="text/html"/>

    <choices-outline>
        <line choice="default">
            <line choice="com.cabinlab.fusionmcpbridge"/>
        </line>
    </choices-outline>

    <choice id="default"/>

    <choice id="com.cabinlab.fusionmcpbridge"
            visible="false"
            title="FusionMCPBridge"
            description="MCP Bridge for Claude AI - Fusion 360 integration">
        <pkg-ref id="com.cabinlab.fusionmcpbridge"/>
    </choice>

    <pkg-ref id="com.cabinlab.fusionmcpbridge"
             version="0.1.0"
             onConclusion="none">FusionMCPBridge-component.pkg</pkg-ref>

</installer-gui-script>
