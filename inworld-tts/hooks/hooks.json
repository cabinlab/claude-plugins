{
  "description": "Inworld TTS notification hooks with per-project voice assignment",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "P='${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-stop-notify.sh'; [[ \"$P\" == ?:* ]] && P=\"${P//\\\\//}\" && P=\"/${P/:/}\"; bash \"$P\"",
            "timeout": 20
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "P='${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-subagentstop-notify.sh'; [[ \"$P\" == ?:* ]] && P=\"${P//\\\\//}\" && P=\"/${P/:/}\"; bash \"$P\"",
            "timeout": 20
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "P='${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-taskcomplete-notify.sh'; [[ \"$P\" == ?:* ]] && P=\"${P//\\\\//}\" && P=\"/${P/:/}\"; bash \"$P\"",
            "timeout": 20
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "P='${CLAUDE_PLUGIN_ROOT}/hooks/scripts/inworld-tts-notify.sh'; [[ \"$P\" == ?:* ]] && P=\"${P//\\\\//}\" && P=\"/${P/:/}\"; bash \"$P\"",
            "timeout": 20
          }
        ]
      }
    ]
  }
}
