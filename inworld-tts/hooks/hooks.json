{
  "description": "Inworld TTS notification hooks with per-project voice assignment",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/run-hook.py ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-stop-notify.sh",
            "timeout": 20
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/run-hook.py ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-subagentstop-notify.sh",
            "timeout": 20
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/run-hook.py ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tts-taskcomplete-notify.sh",
            "timeout": 20
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/run-hook.py ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/inworld-tts-notify.sh",
            "timeout": 20
          }
        ]
      }
    ]
  }
}
